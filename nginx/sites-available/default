# Default server configuration
#

upstream api {
  server backend1:3000;
  server backend2:3000;
}

server {
	listen 81 default_server;

	server_name _;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		proxy_pass http://api;
	}
}


